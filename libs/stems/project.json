{
  "name": "stems",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/stems/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "format": ["esm", "cjs"],
      "platform": "browser",
      "options": {
        "packageJson": "libs/stems/package.json",
        "outputPath": "dist/libs/stems/src",
        "main": "libs/stems/src/index.ts",
        "tsConfig": "libs/stems/tsconfig.lib.json",
        "assets": [],
        "updateBuildableProjectDepsInPackageJson": false,
        "esbuildConfig": "libs/stems/esbuild.config.js"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/stems/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/stems"],
      "options": {
        "jestConfig": "libs/stems/jest.config.js",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/stems/.storybook",
        "uiFramework": "@storybook/web-components"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/stems",
        "configDir": "libs/stems/.storybook",
        "uiFramework": "@storybook/web-components"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
